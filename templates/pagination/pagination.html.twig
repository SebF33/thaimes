{% if pageCount > 1 %}
	<nav>
		<ul class="pagination pagination-sm justify-content-center align-items-center">

			{% if previous is defined %}
				<li class="page-item mx-2">
					<a class="page-link app-button" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;&nbsp;{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}</a>
				</li>
			{% else %}
				<li class="page-item disabled mx-2">
					<span class="page-link app-button">&laquo;&nbsp;{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}</span>
				</li>
			{% endif %}

			{% if startPage > 1 %}
				<li class="page-item mx-2">
					<a class="page-link app-button" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
				</li>
				{% if startPage == 3 %}
					<li class="page-item mx-2">
						<a class="page-link app-button" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
					</li>
				{% elseif startPage != 2 %}
					<li class="page-item disabled mx-2">
						<span class="page-link app-button">&hellip;</span>
					</li>
				{% endif %}
			{% endif %}

			{% for page in pagesInRange %}
				{% if page != current %}
					<li class="page-item mx-2">
						<a class="page-link app-button" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
					</li>
				{% else %}
					<li class="page-item active mx-2">
						<span class="page-link app-button">{{ page }}</span>
					</li>
				{% endif %}

			{% endfor %}

			{% if pageCount > endPage %}
				{% if pageCount > (endPage + 1) %}
					{% if pageCount > (endPage + 2) %}
						<li class="page-item disabled mx-2">
							<span class="page-link app-button">&hellip;</span>
						</li>
					{% else %}
						<li class="page-item mx-2">
							<a class="page-link app-button" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
						</li>
					{% endif %}
				{% endif %}
				<li class="page-item mx-2">
					<a class="page-link app-button" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
				</li>
			{% endif %}

			{% if next is defined %}
				<li class="page-item mx-2">
					<a class="page-link app-button" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">{{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}&nbsp;&raquo;</a>
				</li>
			{% else %}
				<li class="page-item disabled mx-2">
					<span class="page-link app-button">{{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}&nbsp;&raquo;</span>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}
