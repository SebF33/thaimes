{% extends 'base.html.twig' %}

{% block title %}Th√®me - {{ theme }}{% endblock %}

{% block body %}
	<h2>{{ theme }} Theme</h2>

	{% if comments|length > 0 %}
        <div>There are {{ comments|length }} comments.</div>

		{% for comment in comments %}
			{% if comment.photofilename %}
				<img src="{{ asset('uploads/photos/' ~ comment.photofilename) }}"/>
			{% endif %}

			<h4>{{ comment.author }}</h4>
			<small>
				{{ comment.createdAt|format_datetime('medium', 'short') }}
			</small>

			<p>{{ comment.text }}</p>
		{% endfor %}

        {% if previous >= 0 %}
            <a href="{{ path('theme', { id: theme.id, offset: previous }) }}">Previous</a>
        {% endif %}
        {% if next < comments|length %}
            <a href="{{ path('theme', { id: theme.id, offset: next }) }}">Next</a>
        {% endif %}
	{% else %}
		<div>No comments have been posted yet for this theme.</div>
	{% endif %}
{% endblock %}
