<!doctype html>
{% if app.request.locale=='en' %}
	<html lang="en">
	{% elseif app.request.locale=='fr' %}
		<html lang="fr">
		{% endif %}

		<head>
			<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

			<title>
				{% block title %}
					Thaimes
				{% endblock %}
			</title>

			{% block stylesheets %}
				{{ encore_entry_link_tags('app') }}
			{% endblock %}
		</head>

		<body>
			<header
				class="header">
				{# Menu #}
				<div class="container-fluid px-4">
					<nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
						<a class="navbar-brand col-2" href="{{ path('homepage') }}"><img class="logoSite" src={{ asset('/build/logo.png') }} alt="Thaimes" width="110" height="55"/></a>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="menu collapse navbar-collapse justify-content-center col-8" id="navbar">
							<ul class="navbar-nav mr-auto">
								<li class="nav-item active">
									<a class="nav-link" href="{{ path('homepage') }}">
										<i class="fas fa-home"></i>
										{{ 'Home'|trans }}
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link">
										<i class="fas fa-fire"></i>
										{{ 'Popular'|trans }}
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('last-participations') }}">
										<i class="fas fa-comments"></i>
										Participations
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('categories') }}">
										<i class="fas fa-tag"></i>
										{{ 'Categories'|trans }}
									</a>
								</li>
							</ul>
						</div>
						<div class="navbar-actions collapse navbar-collapse justify-content-end col-2" id="navbar">
							<ul class="navbar-nav mr-auto">
								<li class="nav-item">
									<div class="dropdown">
										<a class="nav-link dropdown-toggle" href="#" id="dropdownlanguage" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											{{ app.request.locale|locale_name(app.request.locale)|u.title }}
										</a>
										<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownlanguage">
											<li>
												<a class="dropdown-item" href="{{ path('homepage', {_locale: 'en'}) }}">
													<span class="flag-icon flag-icon-us"></span>EN</a>
											</li>
											<li>
												<a class="dropdown-item" href="{{ path('homepage', {_locale: 'fr'}) }}">
													<span class="flag-icon flag-icon-fr"></span>FR</a>
											</li>
										</ul>
									</div>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('admin') }}">
										<i class="fas fa-user-lock"></i>
									</a>
								</li>
							</ul>
						</div>
					</nav>
				</div>

				<div class="container d-flex justify-content-center hide">
					<h1 class="h3 italic">{{ 'Let\'s enlighten ourselves with what we love!'|trans }}</h1>
			</div>
			<div class="container d-flex justify-content-center text-center mt-4 mb-4 pb-4">
				<div class="sign h3 italic mx-auto">
					{% if app.request.locale=='en' %}
						<span class="fast-flicker">L</span>et's enlighten ourselves<br>with what we&nbsp;<span class="flicker">love!</span>
					{% elseif app.request.locale=='fr' %}
						<span class="fast-flicker">É</span>clairons-nous<br>de ce que nous&nbsp;<span class="flicker">aimons !</span>
					{% endif %}
				</div>
			</div>
		</header>

		{# Page #}
		<main role="main" class="container pb-5">
			{% block body %}{% endblock %}
		</main>

		{# Footer #}
		<footer class="footer">
			<div class="container-fluid">
				<div class="row justify-content-center">
					<div class="col-md-2">
						<h5>© Thaimes</h5>
						<div class="row">
							<div class="col-6">
								<ul class="list-unstyled">
									<li>
										<a href="">Documentation</a>
									</li>
									<li>
										<a href="">Legal Terms</a>
									</li>
									<li>
										<a href="">About</a>
									</li>
								</ul>
							</div>
						</div>
						<ul class="nav">
							<li class="nav-item">
								<a href="https://www.linkedin.com/in/sébastien-flouriot-99aa75205" class="nav-link pl-0">
									<i class="fab fa-linkedin fa-lg"></i>
								</a>
							</li>
							<li class="nav-item">
								<a href="https://github.com/SebF33" class="nav-link">
									<i class="fab fa-github fa-lg"></i>
								</a>
							</li>
						</ul>
						<br>
					</div>
					<div class="col-md-3">
						<h5 class="text-md-right">Contact Me</h5>
						<hr>
						<form>
							<fieldset class="form-group mb-3">
								<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
							</fieldset>
							<fieldset class="form-group">
								<textarea class="form-control" id="exampleMessage" placeholder="Your message"></textarea>
							</fieldset>
							<fieldset class="form-group text-xs-right">
								<button type="button" class="app-button">Send</button>
							</fieldset>
						</form>
					</div>
					<div class="col-md-1">
						<lottie-player src={{ asset('/build/bulb.json') }}
						background="transparent" speed="0.8" style="width: 200px; height: 200px; margin: 0 auto;" loop autoplay></lottie-player>
				</div>
			</div>
		</body>
	</div>
</footer>

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
{% endblock %}</body></html>
